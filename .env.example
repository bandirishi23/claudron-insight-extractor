# Neo4j connection settings
NEO4J_URI="neo4j+s://your-neo4j-endpoint.databases.neo4j.io"   # Example: neo4j+s://abc123.databases.neo4j.io
NEO4J_USERNAME="neo4j"                                         # Your Neo4j username
NEO4J_PASSWORD="your-secure-password"                          # Your Neo4j password
NEO4J_DATABASE="neo4j"                                         # Database name, usually 'neo4j' unless you have custom setup

# Number of top thesis sentences to extract from each post
# Set TOP_THEMES=-1 to use all sentences, or a positive integer like 2 or 5. (Default is 2)
TOP_THEMES=2
# Sets up the cosine similarity, use a float value between 0 and 1 (Defaults to 0.8)
SIMILARITY_THRESHOLD=0.80
